	<!-- jQuery Plugins -->


	<script src="~/admin/js/jquery.min.js"></script>
	<script src="~/admin/js/bootstrap.min.js"></script>
	<script src="~/admin/js/slick.min.js"></script>
	<script src="~/admin/js/nouislider.min.js"></script>
	<script src="~/admin/js/jquery.zoom.min.js"></script>
	<script src="~//adminjs/main.js"></script>
