@model IEnumerable<ShopDienTu.Models.TDanhMucSp>

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div style="margin:2%;">
    <h2>Danh sách sản phẩm</h2>
    <div class="col-md-6">
        <div class="header-search">
            <form>
                <input class="input" placeholder="Search here">
                <button class="search-btn" style="color:darkred;">Search</button>
            </form>
        </div>
    </div>
    <p>@TempData["Message"]</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(Model=>Model.MaSp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TenSp)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaHangSxNavigation.HangSx)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.MaLoaiNavigation.Loai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AnhDaiDien)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaMauSacNavigation.TenMauSac)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGiaBan)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiamGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GioiThieuSp)
                </th>

                <th>Chức Năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaSp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenSp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaHangSxNavigation.HangSx)                   
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.MaLoaiNavigation.Loai)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AnhDaiDien)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaMauSacNavigation.TenMauSac)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DonGiaBan)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GiamGia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.GioiThieuSp)
                    </td>
                    
                    <td>
                        <a asp-action="EditSP" asp-route-maSanPham="@item.MaSp">Edit</a> |
                        <a asp-action="DeleteSP" asp-route-maSanPham="@item.MaSp">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="CreateSP" class="btn btn-primary" style=" margin-top:2%;">Create</a>
</div>
