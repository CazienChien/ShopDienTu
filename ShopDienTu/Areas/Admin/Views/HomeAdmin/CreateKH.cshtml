@model ShopDienTu.Models.TKhachHang
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
	ViewData["Title"] = "CreateUser";
	Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div style="margin:30px; margin-left:8%;">

	<h4>Thêm mới người dùng</h4>
	<hr />
	<div class="row" style="margin-right:10%;">
		<form asp-controller="HomeAdmin" asp-action="CreateKH" method="post" class="mt-3">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>


			<div style="margin-top:7px" class="form-group row">
				<label asp-for="TenKhachHang" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="TenKhachHang" class="form-control" placeholder="Họ Và Tên">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="Username" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-asp-for="Username" class="form-control" placeholder="Tên Đăng Nhập">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="SoDienThoai" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="SoDienThoai" class="form-control" placeholder="Số điện thoại">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="Email" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="Email" class="form-control" placeholder="Email">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="UsernameNavigation.Password" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="UsernameNavigation.Password" class="form-control" placeholder="Mật Khẩu">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="DiaChi" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ">
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="NgaySinh" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="NgaySinh" class="form-control" >
				</div>
			</div>

			<div style="margin-top:7px" class="form-group row">
				<label asp-for="GhiChu" class="col-sm-2 col-form-label"></label>
				<div class="col-sm-10">
					<input asp-for="GhiChu" class="form-control" placeholder="Ghi Chú">
				</div>
			</div>

			<div>
				<button  class="btn btn-primary" style=" margin-top:2%;">Create</button>
			</div>

		</form>
	</div>

	<div>
		<a asp-controller="HomeAdmin" asp-action="DanhSachKH">Back to List</a>
	</div>


</div>
