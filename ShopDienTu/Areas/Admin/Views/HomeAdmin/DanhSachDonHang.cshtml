@model IEnumerable<ShopDienTu.Models.THoaDonBan>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<div style="margin:2%;">
    <h2>Danh sách sản phẩm</h2>
    <div class="col-md-6">
        <div class="header-search">
            <form>

                <input class="input" placeholder="Search here">
                <button class="search-btn" style="color:darkred;">Search</button>
            </form>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MaHoaDon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayLap)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.MaKhachHangNavigation.TenKhachHang)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GiamGiaHd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TongTienHd)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TinhTrang)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaNhanVienNavigation.TenNhanVien)
                </th>

                <th>Chức Năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaHoaDon)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.NgayLap)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.MaKhachHangNavigation.TenKhachHang)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.GiamGiaHd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TongTienHd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TinhTrang)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaNhanVienNavigation.TenNhanVien)
                    </td>

                    <td>
                        <a asp-action="EditSP" asp-route-id="@item.MaHoaDon">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaHoaDon">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="CreateSP" class="btn btn-primary" style=" margin-top:2%;">Create</a>
</div>
